---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import HorizontalExperience from "../components/HorizontalExperience.astro";

---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-5xl font-bold">Thomas Cazort</div>
    <div class="text-3xl py-3 font-bold">Software Engineer</div>
    <div class="py-2">
      <text class="text-lg">
        Hello! I'm Thomas Cazort. I am currently a <b>Software Engineer</b> at <b>Youdle</b>. I am also 
        a grad student at <b>The University of Southern California</b> pursuing my <b>Master's in Computer Science</b>.
      </text>
    </div>
    <div class="py-2">
      <text class="text-lg">
        In my free time, I'm usually rock climbing, biking, exploring the city, or working on my latest project.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://linkedin.com/in/thomascazort337/" target="_blank"> Let's connect!</a>
      <a href="./resume.pdf" class="btn btn-outline ml-5">
        View my Resume
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Work Experience</div>
  </div>

  <HorizontalExperience
    title="Youdle"
    subtitle="Software Engineer"
    img="/youdle.png"
    desc="Fullstack Software Engineer focused on integrating small businesses into Youdle's product search via Shopify."
    url="https://www.youdleit.com/"
    duration="May 2023 - Present"
    tags={["Typescript", "NextJS", "React", "Supabase"]}
  />
  <div class="divider my-0"></div>
  <HorizontalExperience
    title="International Paper"
    subtitle="Connectivity Software Engineer - Intern"
    img="/IP.png"
    desc="Implemented a code automation and deployment tool that saves ~1000 hours per year"
    url="https://www.internationalpaper.com/"
    duration="May 2022 - Aug 2022"
    tags={["Javascript", "HTML", "CSS"]}
  />
  <div class="divider my-0"></div>
  <HorizontalExperience
    title="The University of Memphis"
    subtitle="Undergraduate Teaching Assistant"
    duration="Sept 2021 - Dec 2021"
    img="/UofM.jpg"
    desc="Supported a professor in teaching the Intro to Python and Discrete Mathematics course"
    url="https://www.memphis.edu/cs/"
    tags={["Python"]}
  />

</BaseLayout>
