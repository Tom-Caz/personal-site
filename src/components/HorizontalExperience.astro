---
const {
  id,
  title,
  subtitle,
  img,
  desc,
  url,
  duration,
  tags,
  target = "_blank",
} = Astro.props;
import { Image } from "astro:assets";
---

<div
  id={id}
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={1}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <div class="flow-root pb-2 sm:pb-0">
          <h1 class="text-xl font-bold sm:float-left">
            {title}
          </h1>
          <div class="sm:float-right">{duration}</div>
        </div>

        <div>
          <span class="text-xl mr-1"> {subtitle}</span>
        </div>
        <p class="py-1 text-1xl">{desc}</p>
        {tags && <div class="card-actions pt-4 sm:pt-2 sm:justify-end">
          {
            tags &&
              tags.map((tag) => (
                <div class="badge bg-secondary badge-primary badge-outline">
                  {tag}
                </div>
              ))
          }
        </div>}
      </div>
    </div>
  </a>
</div>

