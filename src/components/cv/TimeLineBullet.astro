---
const { title, subtitle, bullets, start, end } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    {title ? <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span> : <span class="w-4 h-4 block mt-1"></span> }
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h1 class="font-bold mb-1 text-xl">{title}</h1>
    {subtitle &&
      <h5 class="font-semibold mb-1">{subtitle}</h5>
    }
    <span class="font-light text-sm"><b>{start}</b> to <b>{end}</b></span>
    <ul class="list-disc px-8 pt-2">
        {
        bullets &&
            bullets.map((bullet) => <li class="sm:text-sm text-xs">{bullet}</li>)
        }
    </ul>
    <p class="my-2 text-justify">
      <slot />
    </p>
  </div>
</div>
